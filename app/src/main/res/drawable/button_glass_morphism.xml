<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State - Intensified glass -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Glass Background (More transparent when pressed) -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="24dp" />
                    <solid android:color="#E0FFFFFF" />
                </shape>
            </item>
            
            <!-- Border Stroke -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="24dp" />
                    <stroke
                        android:width="2dp"
                        android:color="#60FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal State - Glassmorphism -->
    <item>
        <layer-list>
            <!-- Frosted Glass Background -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="24dp" />
                    <solid android:color="@color/glass_light" />
                </shape>
            </item>
            
            <!-- Light Reflection (Top half gradient) -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="24dp" />
                    <gradient
                        android:startColor="#30FFFFFF"
                        android:centerColor="#10FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:angle="90"
                        android:type="linear" />
                </shape>
            </item>
            
            <!-- Border Stroke -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="24dp" />
                    <stroke
                        android:width="1.5dp"
                        android:color="@color/glass_border_light" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
