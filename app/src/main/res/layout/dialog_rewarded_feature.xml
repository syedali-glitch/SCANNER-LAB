<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">
    
    <!-- Icon -->
    <ImageView
        android:id="@+id/ivFeatureIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_star"
        app:tint="@color/primary_blue"
        android:contentDescription="Feature unlock" />
    
    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unlock Feature"
        android:textColor="@color/text_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp" />
    
    <!-- Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Watch a short ad to unlock this feature"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp" />
    
    <!-- Reward Info -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/background_gray"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="✓ Free feature unlock\n✓ No payment required\n✓ Support the app"
            android:textColor="@color/text_dark"
            android:textSize="13sp"
            android:lineSpacingExtra="4dp" />
    </com.google.android.material.card.MaterialCardView>
    
    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:layout_marginEnd="8dp" />
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWatchAd"
            style="@style/Widget.QRPDFTools.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Watch Ad"
            android:layout_marginStart="8dp" />
    </LinearLayout>
    
    <!-- Remove Ads Option -->
    <TextView
        android:id="@+id/tvRemoveAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or remove all ads for $1.99"
        android:textColor="@color/primary_blue"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>
